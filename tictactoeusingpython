        self.board = [[" "]*3 for _ in range(3)]
        for r in range(3):
            for c in range(3):

                self.buttons[r][c].config(text=" ")

    def reset_game(self):
        self.scores = {"X":0, "O":0, "Tie":0}
        self.update_scoreboard()
        self.reset_board()

    def update_scoreboard(self):
        self.label_score.config(text=self.get_score_text())

